<?xml version='1.0'?>

<robot name="r2d2_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find slam_project)/urdf/r2d2_bot.gazebo" />

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0.1" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </collision>
    <visual name='chassis_visual'>
      <origin xyz="0 0 0.1" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision name='collision'>
      <origin xyz="0 0.11 -0.07" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.4 0.02 0.04"/>
      </geometry>
    </collision>
    <visual name='chassis_visual'>
      <origin xyz="0 0.11 -0.07" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.4 0.02 0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision name='collision'>
      <origin xyz="0 -0.11 -0.07" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.4 0.02 0.04"/>
      </geometry>
    </collision>
    <visual name='chassis_visual'>
      <origin xyz="0 -0.11 -0.07" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.4 0.02 0.04"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision name='fl_caster_collision'>
      <origin xyz="0.195 0.11 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0099"/>
      </geometry>
    </collision>
    <visual name='fl_caster_visual'>
      <origin xyz="0.195 0.11 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0099"/>
      </geometry>
    </visual>

    <collision name='bl_caster_collision'>
      <origin xyz="-0.195 0.11 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0099"/>
      </geometry>
    </collision>
    <visual name='bl_caster_visual'>
      <origin xyz="-0.195 0.11 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0099"/>
      </geometry>
    </visual>

    <collision name='fr_caster_collision'>
      <origin xyz="0.195 -0.11 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0099"/>
      </geometry>
    </collision>
    <visual name='fr_caster_visual'>
      <origin xyz="0.195 -0.11 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0099"/>
      </geometry>
    </visual>

    <collision name='br_caster_collision'>
      <origin xyz="-0.195 -0.11 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0099"/>
      </geometry>
    </collision>
    <visual name='br_caster_visual'>
      <origin xyz="-0.195 -0.11 -0.09" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0099"/>
      </geometry>
    </visual>

    <collision name='head_colision'>
      <origin xyz="0 0 0.25" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </collision>
    <visual name='head_visual'>
      <origin xyz="0 0 0.25" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision name='arms_colision'>
      <origin xyz="0 0 0.09" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.05 0.24 0.28"/>
      </geometry>
    </collision>
    <visual name='arms_visual'>
      <origin xyz="0 0 0.09" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.05 0.24 0.28"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision name='holder_colision'>
      <origin xyz="0.125 0 0.06" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.1 0.05 0.01"/>
      </geometry>
    </collision>
    <visual name='holder_visual'>
      <origin xyz="0.125 0 0.06" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.1 0.05 0.01"/>
      </geometry>
    </visual>

  </link>


  <!-- Left wheel -->
  <link name='left_wheel'>
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision name='left_wheel_collision'>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
  </link>
  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.15 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- Right wheel -->
  <link name='right_wheel'>
    <inertial>
      <mass value="5"/>
      <origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>

    <collision name='right_wheel_collision'>
      <origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0.0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
  </link>
  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.15 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- Laser Rangeifnder -->
  <link name='hokuyo'>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>

    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://slam_project/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>
  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.15 0 0.1" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
  </joint>

  <!-- Camera Sensor -->
  <link name='camera'>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>

    <collision name='camera_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint type="fixed" name="camera_joint">
    <origin xyz="0.07 0 0.305" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
  </joint>

</robot>
